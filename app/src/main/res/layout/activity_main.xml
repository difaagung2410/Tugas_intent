<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fix"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:paddingTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:paddingTop="15dp"
                android:layout_alignParentRight="true"
                android:text="Cek Nilai Mahasiswa"
                android:textColor="#FFFFFF"
                android:textSize="25sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

            <ImageView
                android:id="@+id/uty"
                android:layout_alignParentLeft="true"
                android:src="@drawable/uty"
                android:layout_width="62dp"
                android:layout_height="62dp">
            </ImageView>


        </RelativeLayout>

        <EditText
            android:id="@+id/nim1"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:hint="Masukkan NIM Anda">

        </EditText>

        <EditText
            android:id="@+id/nama1"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Masukkan Nama Anda">
        </EditText>

        <EditText
            android:id="@+id/nilai1"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:hint="Masukkan Nilai Anda">
        </EditText>

        <TextView
            android:layout_marginLeft="25dp"
            android:textSize="10dp"
            android:textColor="#000000"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Pastikan data yang diisikan benar">
        </TextView>

        <Button
            android:id="@+id/btn_proses"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="130dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Proses"
            android:textColor="#FFFFFF"
            android:background="#0AEFA9">

        </Button>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

